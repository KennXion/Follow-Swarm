# Follow-Swarm Environment Configuration
# Generated from environment schema

# Server Configuration
# Application environment
# Allowed: development, production, test
NODE_ENV=development

# Server port
PORT=3001

# Server host
HOST=localhost

# Spotify API (Required)
# Spotify application client ID (REQUIRED)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here

# Spotify application client secret (REQUIRED)
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Spotify OAuth callback URL (REQUIRED)
SPOTIFY_REDIRECT_URI=your_spotify_redirect_uri_here

# Database (Required)
# PostgreSQL connection string (REQUIRED)
DATABASE_URL=

# Database host
DATABASE_HOST=localhost

# Database port
DATABASE_PORT=5432

# Database name
DATABASE_NAME=spotify_swarm

# Database user
DATABASE_USER=postgres

# Database password
DATABASE_PASSWORD=

# Redis Cache
# Redis connection string
REDIS_URL=redis://localhost:6379

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Security (Required)
# JWT signing secret (min 32 chars) (REQUIRED)
# Min length: 32 characters
JWT_SECRET=your_jwt_secret_here

# Data encryption key (min 32 chars) (REQUIRED)
# Min length: 32 characters
ENCRYPTION_KEY=your_encryption_key_here

# Session signing secret (min 32 chars) (REQUIRED)
# Min length: 32 characters
SESSION_SECRET=your_session_secret_here

# Rate Limiting
# Maximum follows per hour
MAX_FOLLOWS_PER_HOUR=30

# Maximum follows per day
MAX_FOLLOWS_PER_DAY=500

# Maximum follows per month
MAX_FOLLOWS_PER_MONTH=10000

# Queue Configuration
# Queue processing concurrency
QUEUE_CONCURRENCY=1

# Maximum job retry attempts
MAX_JOB_ATTEMPTS=3

# Admin
# Comma-separated list of admin emails
ADMIN_EMAILS=admin@followswarm.com

# Payment (Optional)
# Stripe secret key for payments
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Stripe publishable key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Stripe webhook signing secret
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Email (Optional)
# SMTP server host
SMTP_HOST=your_smtp_host_here

# SMTP server port
SMTP_PORT=587

# SMTP username
SMTP_USER=your_smtp_user_here

# SMTP password
SMTP_PASSWORD=your_smtp_password_here

# Default from email address
EMAIL_FROM=noreply@followswarm.com

# Monitoring
# Sentry error tracking DSN
SENTRY_DSN=your_sentry_dsn_here

# Logging level
# Allowed: error, warn, info, debug, verbose
LOG_LEVEL=info

