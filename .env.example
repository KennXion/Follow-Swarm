# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3001/auth/callback

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/spotify_swarm
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=spotify_swarm
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Keys
JWT_SECRET=generate_random_32_char_string_here
ENCRYPTION_KEY=another_random_32_char_string_here
SESSION_SECRET=yet_another_random_32_char_string

# Rate Limiting
MAX_FOLLOWS_PER_HOUR=30
MAX_FOLLOWS_PER_DAY=500
MAX_FOLLOWS_PER_MONTH=10000
FOLLOW_DELAY_MIN=120000
FOLLOW_DELAY_MAX=240000

# Queue Configuration
QUEUE_CONCURRENCY=1
MAX_JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=60000

# Monitoring
SENTRY_DSN=
LOG_LEVEL=debug

# Payment (Stripe)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@spotifyswarm.com